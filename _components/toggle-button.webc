<is-land on:visible>
	<button type="button" aria-pressed="true" :class="`toggle ${this.class ? ` ${this.class}`: ''}`" :data-toggle-class="toggleclass">
		<span class="toggle-control"></span>
		<span class="toggle-text" @html="label"></span>
	</button>
	<template data-island="once">
		<link rel="stylesheet" href="/static/toggle-button.css">
		<script src="/static/toggle-button.js"></script>
	</template>
</is-land>